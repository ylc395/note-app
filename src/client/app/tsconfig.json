{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["electron"],
    "lib": ["dom", "dom.iterable", "ESNext"],
    "baseUrl": ".",
    "jsx": "react-jsx",
    "rootDir": "../../",
    "outDir": "../../../dist/client",
    "paths": {
      "@domain/*": ["domain/*", "../shared/domain/*", "../../shared/domain/*"],
      "@components/*": ["driver/web/components/*", "../shared/components/*"],
      "@utils/*": ["../../shared/utils/*"],
      "@web-infra/*": ["driver/web/infra/*"],
      "@shared/*": ["../shared/*", "../../shared/*"]
    }
  },
  "references": [{ "path": "../shared/tsconfig.json" }]
}
