{
  "name": "Star Clipper",
  "description": "Build an Extension!",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Open Star Note Clipper",
    "default_popup": "popup/index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./content-script.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
